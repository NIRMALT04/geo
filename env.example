# Environment Configuration for Multimodal EO Analysis System

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# MongoDB Configuration
MONGO_PASSWORD=eo_admin_password_change_me
MONGODB_URI=mongodb://admin:${MONGO_PASSWORD}@mongodb:27017/eo_analysis?authSource=admin

# Redis Configuration
REDIS_PASSWORD=eo_redis_password_change_me
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379

# =============================================================================
# API KEYS AND EXTERNAL SERVICES
# =============================================================================

# OpenAI API (for GPT models and embeddings)
OPENAI_API_KEY=your_openai_api_key_here

# VAPI (Voice AI Platform)
VAPI_API_KEY=your_vapi_api_key_here

# ElevenLabs (Voice synthesis)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# ISRO/Bhuvan Data Access
ISRO_API_KEY=your_isro_api_key_here
BHUVAN_API_KEY=your_bhuvan_api_key_here

# =============================================================================
# CLOUD STORAGE CONFIGURATION
# =============================================================================

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_S3_BUCKET=eo-analysis-data-bucket
AWS_REGION=us-east-1

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT Secret for authentication
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# Session secret
SESSION_SECRET=your_session_secret_change_this

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Environment
NODE_ENV=development

# Server Configuration
BACKEND_PORT=8000
FRONTEND_PORT=3000

# API Base URLs
VITE_API_BASE_URL=http://localhost:8000/api
VITE_WS_URL=ws://localhost:8000

# =============================================================================
# AI MODEL CONFIGURATION
# =============================================================================

# Model Cache Directory
MODEL_CACHE_DIR=./ai-models/cache
HF_HOME=./ai-models/cache

# GPU Configuration
CUDA_VISIBLE_DEVICES=0

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================

# Grafana Configuration
GRAFANA_PASSWORD=admin_change_me

# Log Levels
LOG_LEVEL=info
